<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LoginTo.MainWindow"
        Title="LoginTo"
		Background="#F5F5F5">
	<Border Background="#1C1C1C" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Spacing="10">
			<TextBlock Text="Вход" Foreground="White" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>

			<TextBlock Text="Электронный адрес" Foreground="White"/>
			<TextBox Name="EmailBox"/>

			<TextBlock Text="Пароль" Foreground="White"/>
			<TextBox Name="PasswordBox" PasswordChar="•" />

			<Button Content="Вход" Background="#007BFF" Foreground="White" Click="Button_Click"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
				<TextBlock Text="Создать новый аккаунт" Foreground="LightBlue" Cursor="Hand"/>
				<TextBlock Text="Забыли пароль?" Foreground="LightBlue" Cursor="Hand"/>
			</StackPanel>
		</StackPanel>
	</Border>
</Window>
