<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LoginTo.WelcomeWindow"
        Title="WelcomeWindow">
	<Border Background="#1C1C1C" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Spacing="10">
			<TextBlock Text="Добро пожаловать!" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
			<TextBlock Name="EmailText" Foreground="White" HorizontalAlignment="Center"/>
		</StackPanel>
	</Border>
</Window>
